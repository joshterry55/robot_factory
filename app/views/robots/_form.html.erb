<div class="row">
<div class="container">
<%= form_for [@inventor, @robot] do |f| %>
  <div class="col m6">
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>
  </div>
  <div class="col m6">
    <%= f.label :serial_number %>
    <%= f.number_field :serial_number %>
  </div>
  <div class="col m6">
    <%= f.label :color %>
    <%= f.text_field :color %>
  </div>
  <div class="col m6">
    <%= f.label :industry %>
    <%= f.select :industry, ['education', 'war',
                             'service', 'novelty'] %>
  </div>
  <div class="input-field col s6">
      <%= f.label :evil %>
      <br><br>
      <%= f.select :evil, ['true', 'false'] %>
  </div>
  <div class="center col s12">
  <%= f.submit class: "btn black white-text" %>
  </div>
<% end %>
</div>
</div>
